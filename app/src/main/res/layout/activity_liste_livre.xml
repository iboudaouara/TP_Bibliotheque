<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ListeLivresActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtListLivre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:width="200dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:shadowColor="#87AED8"
            android:text="Liste des livres"
            android:textAlignment="center"
            android:textColor="#2E58C5"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <ListView
            android:id="@+id/bookListView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="30dp"
            android:background="#F3F5FE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRetour_ListLivre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:backgroundTint="#2E58C5"
                android:minWidth="120dp"
                android:text="Retour"
                android:textColorLink="#2E58C5"
                android:textSize="18dp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/btnFavoris_ListLivre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#2E58C5"
                android:minWidth="120dp"
                android:text="Favoris"
                android:textSize="18dp"
                app:cornerRadius="5dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>