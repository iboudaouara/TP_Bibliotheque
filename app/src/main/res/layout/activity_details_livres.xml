<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailsLivres">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Détails du livre"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre"
            android:enabled="false"/>

        <EditText
            android:id="@+id/editAuteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Auteur"
            android:enabled="false"/>

        <EditText
            android:id="@+id/editISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ISBN"
            android:enabled="false"/>

        <EditText
            android:id="@+id/editMaisonEdition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maison d'édition"
            android:enabled="false"/>

        <EditText
            android:id="@+id/editDatePublication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date de publication"
            android:enabled="false"/>

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:lines="4"/>

        <TextView
            android:id="@+id/textMoyenneEvaluations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moyenne des évaluations : "
            android:layout_marginTop="16dp"/>

        <RatingBar
            android:id="@+id/ratingBarEvaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonEnregistrer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retour"/>

    </LinearLayout>
</ScrollView>